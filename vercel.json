{
  "version": 2,
  "installCommand": "pnpm install --prefer-offline",
  "buildCommand": "pnpm --filter @breakagency/web build",
  "outputDirectory": "apps/web/dist",
  "framework": "vite",
  "git": {
    "ignoreCommand": "pnpm i --prefer-offline"
  },
  "env": {
    "VITE_API_URL": "https://break-agency-app-production.up.railway.app/api"
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ],
  "rewrites": [
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}
