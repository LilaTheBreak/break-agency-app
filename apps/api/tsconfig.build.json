{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2022",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": false,
    "noEmit": false,
    "baseUrl": ".",
    "paths": {
      "@home/shared/*": ["../../packages/shared/dist/*"],
      "cors": ["./src/types/cors.d.ts"],
      "morgan": ["./src/types/morgan.d.ts"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["**/*.spec.ts", "node_modules"]
}
